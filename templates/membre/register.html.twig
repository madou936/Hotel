{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block body %}


    <h1 class="my-4 text-center">Inscription</h1>
   

        <div class="row">
            <div class="col-6 mx-auto">
                {{ form_start(form) }}

                <div class="row">
                    <div class="col-4">{{ form_row(form.pseudo) }}</div>
                    <div class="col-4">{{ form_row(form.nom) }}</div>
                    <div class="col-4">{{ form_row(form.prenom) }}</div>
                </div>
                <div class="row">
                    <div class="col-4">{{ form_row(form.civilite) }}</div>
                    <div class="col-4">{{ form_row(form.email) }}</div>
                    <div class="col-4">{{ form_row(form.password) }}</div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>



{% endblock %}